def make_int(x):
    x=str(x)
    
    y=list(x)
    
    if "-" in y:
        y = x 
        year = int("".join(x[0:4]))
        month = int("".join(x[5:7]))
        day = int("".join(x[8:10]))
        return year , month , day
    else:
        year = int("".join(x[0:2]))
        month = int("".join(x[3:5]))
        day = int("".join(x[6:8]))
        return year , month , day

