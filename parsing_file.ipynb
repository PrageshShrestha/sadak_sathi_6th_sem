        "dir_key": "anti-clockwise",
        "stops_order": list(reversed(BASE_STOPS_ORDER))
    }
}

# ===================== HELPER FUNCTIONS =====================
def time_to_seconds(t):
    if isinstance(t, (tuple, list)) and len(t) == 3:
        return t[0]*3600 + t[1]*60 + t[2]
    return 0

def sec_to_time(sec):
    sec = int(sec)
    h = sec // 3600
    m = (sec % 3600) // 60
    s = sec % 60
    return f"{h:02d}:{m:02d}:{s:02d}"

def get_stop(lat, lon, stations_dict):
    for name, (s, w, n, e) in stations_dict.items():
        if s <= lat <= n and w <= lon <= e:
            return name
    return None

def classify_period(abs_seconds):
    hour = (abs_seconds // 3600) % 24
    if PEAK_MORNING[0] <= hour < PEAK_MORNING[1]:
        return "morning"
    if PEAK_EVENING[0] <= hour < PEAK_EVENING[1]:
        return "evening"
    return "free"

# ===================== 1. Waiting & Travel Time Heatmaps per Direction =====================
for dir_str, config in DIRECTION_CONFIG.items():
    files = glob.glob(config["pattern"])
    if not files:
        print(f"No files found for {dir_str}")
        continue

    stops_order = config["stops_order"]
    stations = bus_stations[config["dir_key"]]
    travel_pairs = [f"{stops_order[i]}_to_{stops_order[(i+1) % len(stops_order)]}" for i in range(len(stops_order))]

    waiting_data = []
    travel_data = []

    for file in files:
        try:
            df = pd.read_csv(file)
            if isinstance(df['time'].iloc[0], str) and df['time'].iloc[0].startswith('('):
                df['time'] = df['time'].apply(ast.literal_eval)

            df['timestamp_sec'] = df['time'].apply(time_to_seconds)
            df['cum_time'] = df['time_taken'].cumsum().shift(fill_value=0)

            df['stop'] = df.apply(lambda row: get_stop(row['lat'], row['lon'], stations), axis=1)
            df['group_id'] = (df['stop'] != df['stop'].shift()).cumsum()
            groups = df.groupby('group_id')

            waiting_times = {stop: 0 for stop in stops_order}
            stop_arrivals = {}
            stop_departures = {}

            for _, group in groups:
                stop = group['stop'].iloc[0]
                if stop and len(group) > 1:
                    waiting = group['cum_time'].iloc[-1] - group['cum_time'].iloc[0]
                    waiting_times[stop] += waiting
                    if stop not in stop_arrivals:
                        stop_arrivals[stop] = group['cum_time'].iloc[0]
                        stop_departures[stop] = group['cum_time'].iloc[-1]

            waiting_row = {'file': os.path.basename(file), **waiting_times}
            waiting_data.append(waiting_row)

            stop_sequence = [g['stop'].iloc[0] for _, g in groups if g['stop'].iloc[0]]
            stop_sequence = list(dict.fromkeys(stop_sequence))

            travel_times = {pair: 0 for pair in travel_pairs}
            for i in range(1, len(stop_sequence)):
                from_stop = stop_sequence[i-1]
                to_stop = stop_sequence[i]
                key = f"{from_stop}_to_{to_stop}"
                if key in travel_times and from_stop in stop_departures and to_stop in stop_arrivals:
                    travel = stop_arrivals[to_stop] - stop_departures[from_stop]
                    if travel > 0:
                        travel_times[key] = travel

            travel_row = {'file': os.path.basename(file), **travel_times}
            travel_data.append(travel_row)

        except Exception as e:
            print(f"Error processing {file}: {e}")

    if waiting_data:
        df_wait = pd.DataFrame(waiting_data).set_index('file').reindex(columns=stops_order)
        plt.figure(figsize=(12, len(files)*0.5 + 2))
        sns.heatmap(df_wait, annot=True, fmt=".0f", cmap="YlGnBu", cbar_kws={'label': 'Seconds'})
        plt.title(f"Waiting Times at Stops - {dir_str.replace('_', ' ').title()}")
        plt.ylabel("Trip File")
        plt.xlabel("Stops")
        plt.tight_layout()
        plt.savefig(os.path.join(FOLDER_HEATMAP_WAIT_TRAVEL, f"waiting_{dir_str}.png"))
        plt.close()

    if travel_data:
        df_travel = pd.DataFrame(travel_data).set_index('file').reindex(columns=travel_pairs)
        plt.figure(figsize=(len(travel_pairs)*0.8, len(files)*0.5 + 2))
        sns.heatmap(df_travel, annot=True, fmt=".0f", cmap="OrRd", cbar_kws={'label': 'Seconds'})
        plt.title(f"Travel Times Between Stops - {dir_str.replace('_', ' ').title()}")
        plt.ylabel("Trip File")
        plt.xlabel("Route Segment")
        plt.xticks(rotation=45, ha='right')
        plt.tight_layout()
        plt.savefig(os.path.join(FOLDER_HEATMAP_WAIT_TRAVEL, f"travel_{dir_str}.png"))
        plt.close()

# ===================== 2. Cumulative Journey Time per Trip (UPPER TRIANGLE) =====================
all_files = glob.glob("clockwise_*.csv") + glob.glob("counter_clockwise_*.csv")
print(f"\nGenerating cumulative journey heatmaps (upper triangle) for {len(all_files)} trips...")

for file_path in all_files:
    filename = os.path.basename(file_path)
    direction_name = "Counter-Clockwise" if "counter_clockwise" in filename else "Clockwise"
    dir_key = "anti-clockwise" if "counter_clockwise" in filename else "clockwise"
    route_order = BASE_STOPS_ORDER if direction_name == "Clockwise" else list(reversed(BASE_STOPS_ORDER))
    stations = bus_stations[dir_key]

    print(f"  Processing: {filename}")
    try:
        df = pd.read_csv(file_path)
        if isinstance(df['time'].iloc[0], str) and df['time'].iloc[0].startswith('('):
            df['time'] = df['time'].apply(ast.literal_eval)

        df['timestamp_sec'] = df['time'].apply(time_to_seconds)
        df['cum_time'] = df['time_taken'].cumsum().fillna(0)
        df['stop'] = df.apply(lambda r: get_stop(r['lat'], r['lon'], stations), axis=1)
        df['change'] = (df['stop'] != df['stop'].shift(1))
        df['segment'] = df['change'].cumsum()

        arrival_times = {}
        arrival_clocks = {}
        for _, group in df.groupby('segment'):
            stop = group['stop'].iloc[0]
            if stop and pd.notna(stop):
                arrival_times[stop] = group['cum_time'].iloc[0]
                arrival_clocks[stop] = group['timestamp_sec'].iloc[0]

        visited_stops = [s for s in route_order if s in arrival_times]
        if len(visited_stops) < 2:
            print(f"    Not enough stops. Skipping.")
            continue

        # Initialize full matrix with all stops
        matrix = pd.DataFrame(np.nan, index=BASE_STOPS_ORDER, columns=BASE_STOPS_ORDER)

        # Fill only upper triangle: from earlier stop (row) to later stop (column)
        for i in range(len(visited_stops)):
            for j in range(i + 1, len(visited_stops)):
                from_stop = visited_stops[i]
                to_stop = visited_stops[j]
                mins = (arrival_times[to_stop] - arrival_times[from_stop]) / 60.0
                matrix.loc[from_stop, to_stop] = round(mins, 1)

        # Plotting
        fig = plt.figure(figsize=(15, 11))
        ax_main = plt.gca()
        sns.heatmap(matrix, annot=True, fmt=".1f", cmap="RdYlGn_r", linewidths=0.6, linecolor='gray',
                    cbar_kws={'label': 'Journey Time (minutes)'}, vmin=0, vmax=120, mask=matrix.isna(), ax=ax_main)

        plt.title(f"Cumulative Journey Time Heatmap (Upper Triangle)\n{filename}\n{direction_name} Route", fontsize=15, pad=30)
        plt.xlabel("To Stop →")
        plt.ylabel("From Stop →")
        plt.xticks(rotation=45, ha='right')
        plt.yticks(rotation=0)

        # Timeline below
        divider = make_axes_locatable(ax_main)
        ax_timeline = divider.append_axes("bottom", size="25%", pad=0.7)

        times_sec = [arrival_clocks[s] for s in visited_stops]
        time_labels = [sec_to_time(t) for t in times_sec]

        ax_timeline.plot(times_sec, [0]*len(times_sec), 'o', color='#1f77b4', markersize=10,
                         markerfacecolor='white', markeredgewidth=2)
        ax_timeline.set_ylim(-1, 1)
        ax_timeline.set_yticks([])
        for spine in ['top', 'left', 'right']:
            ax_timeline.spines[spine].set_visible(False)
        ax_timeline.set_xlabel("Absolute Arrival Time (Clock)", fontsize=12, labelpad=15)

        for t, name in zip(times_sec, visited_stops):
            ax_timeline.text(t, 0.35, name.capitalize().replace("_", " "), rotation=40, ha='right', va='bottom', fontsize=10)
        for t, label in zip(times_sec, time_labels):
            ax_timeline.text(t, -0.5, label, rotation=40, ha='right', va='top', fontsize=9, color='gray')

        plt.tight_layout(rect=[0, 0.08, 1, 0.95])
        safe_name = os.path.splitext(filename)[0]
        output_path = os.path.join(FOLDER_HEATMAP_CUMULATIVE, f"cumulative_{safe_name}.png")
        plt.savefig(output_path, dpi=200, bbox_inches='tight')
        plt.close()
        print(f"    Saved: cumulative_{safe_name}.png")

    except Exception as e:
        print(f"    ERROR: {e}")

# ===================== 3. Peak Hour Average Travel Time Analysis =====================
print(f"\nGenerating peak hour analysis...")
peak_records = []

for file_path in all_files:
    try:
        df = pd.read_csv(file_path)
        if isinstance(df['time'].iloc[0], str) and df['time'].iloc[0].startswith('('):
            df['time'] = df['time'].apply(ast.literal_eval)

        df['time_sec'] = df['time'].apply(time_to_seconds)
        df['cum_time'] = df['time_taken'].cumsum()
        stations_dict = bus_stations["clockwise"] if "clockwise" in file_path else bus_stations["anti-clockwise"]
        df['stop'] = df.apply(lambda r: get_stop(r['lat'], r['lon'], stations_dict), axis=1)
        df['segment'] = (df['stop'] != df['stop'].shift()).cumsum()

        arrivals = df.dropna(subset=["stop"]).groupby("segment").first()[["stop", "time_sec", "cum_time"]]
        stops = arrivals["stop"].tolist()
        abs_times = arrivals["time_sec"].tolist()
        cum_times = arrivals["cum_time"].tolist()

        for i in range(len(stops) - 1):
            from_stop = stops[i]
            to_stop = stops[i + 1]
            minutes = (cum_times[i+1] - cum_times[i]) / 60.0
            period = classify_period(abs_times[i])
            peak_records.append([from_stop, to_stop, minutes, period])

    except Exception as e:
        print(f"Peak analysis error {file_path}: {e}")

if peak_records:
    df_peak = pd.DataFrame(peak_records, columns=["from", "to", "minutes", "period"])

    def make_peak_heatmap(period, title, filename):
        subset = df_peak[df_peak["period"] == period]
        if subset.empty:
            print(f"No data for {period} period.")
            return
        mat = subset.pivot_table(index="from", columns="to", values="minutes", aggfunc="mean") \
                    .reindex(index=BASE_STOPS_ORDER, columns=BASE_STOPS_ORDER)
        plt.figure(figsize=(15, 12))
        sns.heatmap(mat, annot=True, fmt=".1f", cmap="RdYlGn_r", linewidths=0.5,
                    cbar_kws={"label": "Avg Travel Time (min)"}, vmin=0)
        plt.title(title, fontsize=16)
        plt.xlabel("To Stop →")
        plt.ylabel("From Stop →")
        plt.xticks(rotation=45, ha="right")
        plt.yticks(rotation=0)
        plt.tight_layout()
        plt.savefig(os.path.join(FOLDER_PEAK_HEATMAPS, filename), dpi=200)
        plt.close()
        print(f"Saved: {filename}")

    make_peak_heatmap("morning", "Morning Rush (07:00–10:00) Average Travel Time", "morning_rush_heatmap.png")
    make_peak_heatmap("evening", "Evening Rush (17:00–19:00) Average Travel Time", "evening_rush_heatmap.png")
    make_peak_heatmap("free", "Off-Peak Hours Average Travel Time", "free_time_heatmap.png")

